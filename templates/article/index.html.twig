{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="article">
        <h1>Article</h1>

        {% for article in articles %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <a href="#" class="btn btn-primary">{{ article.price }}€</a>
                        <a class="btn btn-primary" href="{{ path(  'article.show', {id:article.id } ) }}">Voir l'article</a>
                    </div>
                </div>
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary mb-2" href="{{ path('article.create') }}">Créer un article</a>
        {% endif %}
    </div>
{% endblock %}
